<?xml version="1.0" encoding="utf-8"?>
<reports:PieChartReport 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:reports="components.reports.*"
	width="100%"
	height="100%"
	styleName="baseChart">
	
	<fx:Metadata>
		[ResourceBundle("crm")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import assets.skins.ChartSkin;
		
		]]>
	</fx:Script>
	
	<mx:PieChart id="_chartComponent"
		width="100%"
		height="100%"
		showDataTips="true"
		dataProvider="{chartDataProvider}"
		series="{chartSeries}" 
		maxHeight="200" />

</reports:PieChartReport>
